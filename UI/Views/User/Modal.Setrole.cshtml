@{
    var rolelist = this.ViewData["RoleList"] != null ? this.ViewData["RoleList"] as List<EFModel.SYS_ROLE> : new List<EFModel.SYS_ROLE>();
}
<div id="my-modal-setrole" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">设置角色</h3>
            </div>

            <div class="modal-body">
                <input type="text" id="form-field-1" disabled="disabled" name="txtuserid" hidden="hidden" class="col-xs-10 col-sm-5" />
                <!-- PAGE CONTENT BEGINS -->
                <form class="form-horizontal" id="form-role" role="form">
                    @foreach (var item in rolelist)
                    {
                        <div class="form-group">
                            <div class="checkbox">
                                <label class="block">
                                    <input name="form-field-checkbox" value="@item.RoleID" type="checkbox" class="ace input-lg">
                                    <span class="lbl bigger-120">@item.RoleName</span>
                                </label>
                            </div>
                        </div>
                    }                    
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-sm btn-success" id="btnSetSave">
                    <i class="ace-icon fa fa-check pull-right"></i>
                    设置
                </button>
                <button class="btn btn-sm btn-danger pull-right" data-dismiss="modal">
                    <i class="ace-icon fa fa-times"></i>
                    关闭
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>